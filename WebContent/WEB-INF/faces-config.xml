<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<application>
		<resource-bundle>
			<base-name>parameters</base-name>
			<var>param</var>
		</resource-bundle>
	</application>	
	<navigation-rule>
		<from-view-id>/vistas/bienvenida.xhtml</from-view-id>
		<navigation-case>
		<from-outcome>inicioSesionEmpleado</from-outcome>
		<to-view-id>/vistas/inicioSesion.xhtml</to-view-id>
		<redirect />		
		</navigation-case>
		<navigation-case>
		<from-outcome>solicitudCotizacion</from-outcome>
		<to-view-id>/vistas/solicitudCotizacion.xhtml</to-view-id>
		<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/vistas/inicioSesion.xhtml</from-view-id>
		
		<navigation-case>
			<from-outcome>menuSecretaria</from-outcome>
			<to-view-id>/vistas/menuSecretaria.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>menuGerente</from-outcome>
			<to-view-id>/vistas/menuGerente.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>menuCajera</from-outcome>
			<to-view-id>/vistas/menuCajera.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>menuVentas</from-outcome>
			<to-view-id>/vistas/menuVentas.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>menuAlmacen</from-outcome>
			<to-view-id>/vistas/menuAlmacen.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/vistas/*</from-view-id>
		<navigation-case>
			<from-outcome>iniciarSesion</from-outcome>
			<to-view-id>/vistas/bienvenida.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registrarCotizacion</from-outcome>
			<to-view-id>/vistas/registrarCotizacion.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>listarCotizaciones</from-outcome>
			<to-view-id>/vistas/listarCotizaciones.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registrarPago</from-outcome>
			<to-view-id>/vistas/registrarPago.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>listarPagos</from-outcome>
			<to-view-id>/vistas/listarPagos.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>registrarPedido</from-outcome>
			<to-view-id>/vistas/registrarPedido.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	
	
</faces-config>
